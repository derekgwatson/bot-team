# Flask configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_DEBUG=false

# Bot-to-bot API key (shared across all bots)
BOT_API_KEY=your-bot-api-key-here

# Optional: Override Chester URL
# CHESTER_URL=http://localhost:8008

# Admin access (required for web UI)
# Comma-separated list of email addresses that can access Doc
# Can also be set in config.yaml under admin.emails
DOC_ADMIN_EMAILS=admin@watsonblinds.com.au

# Google OAuth (required for web UI login)
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Note: Allowed domains are loaded from shared/config/organization.yaml
# No need to configure here - uses Watson Blinds domains automatically
