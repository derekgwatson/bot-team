# Local configuration overrides for Dorothy
# Copy this file to config.local.yaml and customize for your environment
# config.local.yaml is gitignored and won't be committed

# Override global defaults (applies to all bots unless overridden)
defaults:
  repo: git@github.com:yourorg/bot-team.git    # Your actual repo URL
  # repo_path: /var/www/bot-team               # Where git repo is cloned (for monorepo setup)
  # path: /var/www/bot-team/{bot_name}         # Where each bot's code lives
  # domain: {bot_name}.yourdomain.com          # Override domain pattern
  # workers: 4                                 # Override default workers
  # ssl_email: your@email.com                  # Optional: Auto-run certbot during deployment (omit if you manage SSL manually)

# Override specific bots if needed
# bots:
#   sally:
#     description: SSH Command Executor
#     skip_nginx: true              # Internal-only bot, no nginx/SSL needed
#   peter:
#     workers: 5                    # Override just Peter's workers
#     domain: custom.com            # Override just Peter's domain
#     nginx_config_name: peter-bot  # Override nginx config filename if different from bot name
#     ssl_email: peter@email.com    # Optional: Auto-run certbot for this bot only

# Override deployment settings
# deployment:
#   default_server: staging
#   deployment_timeout: 900
