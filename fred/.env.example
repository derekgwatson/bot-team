# Fred's Environment Variables
# Copy this file to .env and fill in your values

# Google Workspace Domain
# This is the primary domain for your Google Workspace
GOOGLE_WORKSPACE_DOMAIN=example.com

# Google Workspace Admin Email
# This email is used for domain-wide delegation with the service account
GOOGLE_WORKSPACE_ADMIN_EMAIL=admin@example.com

# Google OAuth for login (REQUIRED for security)
# Get these from Google Cloud Console > APIs & Credentials > OAuth 2.0 Client IDs
# See GOOGLE_OAUTH_SETUP.md for detailed setup instructions
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Flask secret key for sessions (generate a random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Allowed email addresses (comma-separated)
# Only these emails can access Fred's web interface
ALLOWED_EMAILS=your@email.com,another@email.com
