# Juno Bot Environment Variables
# Copy this to .env and update values for your environment

# Flask secret key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here

# Enable debug mode (development only)
FLASK_DEBUG=false

# Shared bot API key for bot-to-bot communication
# This should match the BOT_API_KEY in the root .env file
# BOT_API_KEY=your-shared-bot-api-key

# Google Maps API key (optional - for ETA calculation)
# Get one from https://console.cloud.google.com/
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
