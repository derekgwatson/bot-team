# Fiona Environment Configuration
# Copy this file to .env and fill in the values

# Flask secret key for session management (generate a secure random string)
FLASK_SECRET_KEY=your-secret-key-here

# Enable debug mode (set to 'true' for local development)
FLASK_DEBUG=false

# Google OAuth credentials (for staff authentication)
# Get these from the Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Shared API key for bot-to-bot communication
# This should be the same across all bots
BOT_API_KEY=your-shared-bot-api-key

# Mavis URL override (optional)
# If not set, uses localhost:8017 in dev or mavis.watsonblinds.com.au in prod
# MAVIS_URL=http://localhost:8017
